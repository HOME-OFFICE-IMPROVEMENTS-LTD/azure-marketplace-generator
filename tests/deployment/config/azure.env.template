# Azure Deployment Test Environment Configuration
# Copy this file to azure.env and fill in your values
# WARNING: Never commit azure.env to version control!

# Azure Subscription
AZURE_SUBSCRIPTION_ID=""
AZURE_TENANT_ID=""

# Service Principal Credentials
AZURE_CLIENT_ID=""
AZURE_CLIENT_SECRET=""

# Default Deployment Settings
AZURE_LOCATION="eastus"
AZURE_RESOURCE_GROUP_PREFIX="rg-azmp-test"

# Cost Controls
MAX_DEPLOYMENT_COST_USD="10"
MAX_DAILY_COST_USD="50"
MAX_WEEKLY_COST_USD="200"

# Resource TTL (time-to-live)
RESOURCE_TTL_HOURS="4"

# Deployment Timeouts
DEPLOYMENT_TIMEOUT_MINUTES="30"
VALIDATION_TIMEOUT_MINUTES="10"

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARN, ERROR
LOG_DIR="./results"

# Notifications (optional)
ALERT_EMAIL=""
SLACK_WEBHOOK_URL=""

# Generator Settings
GENERATOR_CLI="azmp"
GENERATOR_CONFIG_DIR="./config"

# Test Settings
RUN_COST_ANALYSIS="true"
RUN_SECURITY_VALIDATION="true"
RUN_MONITORING_VALIDATION="true"
AUTO_CLEANUP="true"
CLEANUP_ON_FAILURE="true"

# Azure CLI Settings
AZ_CLI_EXTENSION_INDEX_URL="https://azcliprod.blob.core.windows.net/cli-extensions/index"
