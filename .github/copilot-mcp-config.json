{
  "mcpServers": {
    "azure-marketplace": {
      "type": "stdio",
      "command": "npx",
      "args": ["@azure/mcp-server-marketplace"],
      "tools": ["list-offerings", "get-pricing", "search-publishers", "get-marketplace-stats"],
      "env": {
        "AZURE_TENANT_ID": "${AZURE_TENANT_ID}",
        "AZURE_CLIENT_ID": "${AZURE_CLIENT_ID}"
      }
    },
    "azure-arm-templates": {
      "type": "stdio",
      "command": "npx",
      "args": ["@azure/mcp-server-arm"],
      "tools": ["validate-template", "get-schema", "check-best-practices", "lint-template"],
      "env": {
        "AZURE_SUBSCRIPTION_ID": "${AZURE_SUBSCRIPTION_ID}"
      }
    },
    "microsoft-docs": {
      "type": "stdio",
      "command": "npx",
      "args": ["@microsoft/mcp-server-docs", "--focus=azure,marketplace"],
      "tools": [
        "search-docs", 
        "get-api-reference", 
        "fetch-tutorial", 
        "check-latest-version",
        "get-azure-best-practices",
        "fetch-code-samples",
        "get-service-updates",
        "search-marketplace-docs"
      ],
      "env": {
        "DOCS_LANGUAGE": "en-us",
        "CONTENT_FILTER": "azure,arm-templates,marketplace,bicep",
        "CACHE_DURATION": "3600"
      }
    },
    "enterprise-knowledge": {
      "type": "stdio",
      "command": "npx",
      "args": ["@enterprise/mcp-server-knowledge", "--org=hoiltd"],
      "tools": [
        "search-standards", 
        "get-policy", 
        "check-compliance",
        "get-architecture-patterns",
        "validate-security-requirements",
        "fetch-deployment-procedures",
        "get-coding-standards",
        "check-enterprise-approval"
      ],
      "env": {
        "ENTERPRISE_KNOWLEDGE_BASE": "https://docs.home-office-improvements.ltd",
        "API_KEY": "${ENTERPRISE_DOCS_API_KEY}",
        "ORGANIZATION": "HOME-OFFICE-IMPROVEMENTS-LTD",
        "COMPLIANCE_LEVEL": "enterprise-strict",
        "SECURITY_CLEARANCE": "internal-confidential"
      }
    },
    "github-enterprise": {
      "type": "stdio",
      "command": "npx", 
      "args": ["@github/mcp-server-enterprise", "--org=HOME-OFFICE-IMPROVEMENTS-LTD"],
      "tools": [
        "list-repos", 
        "create-issue", 
        "get-workflow-status", 
        "manage-branches",
        "automate-pr-workflow",
        "manage-dependabot-alerts",
        "sync-repository-settings",
        "bulk-operation-management",
        "advanced-security-integration",
        "enterprise-audit-logging"
      ],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN}",
        "GITHUB_ENTERPRISE_URL": "https://github.com/HOME-OFFICE-IMPROVEMENTS-LTD",
        "ORGANIZATION": "HOME-OFFICE-IMPROVEMENTS-LTD",
        "AUTO_MERGE_ENABLED": "true",
        "DEPENDABOT_AUTO_MERGE": "patch,minor",
        "SECURITY_ALERTS_WEBHOOK": "${SECURITY_WEBHOOK_URL}"
      }
    },
    "security-compliance": {
      "type": "stdio",
      "command": "npx",
      "args": ["@security/mcp-server-compliance", "--enterprise-mode"],
      "tools": [
        "scan-vulnerabilities", 
        "check-compliance", 
        "audit-permissions",
        "automated-security-scanning",
        "dependency-vulnerability-assessment",
        "code-security-analysis",
        "infrastructure-security-validation",
        "incident-response-automation",
        "compliance-reporting",
        "security-policy-enforcement"
      ],
      "env": {
        "SECURITY_POLICY": "enterprise-strict",
        "COMPLIANCE_STANDARD": "HOILTD-2024",
        "VULNERABILITY_THRESHOLD": "medium",
        "AUTO_REMEDIATION": "true",
        "SECURITY_NOTIFICATIONS": "${SECURITY_TEAM_EMAIL}",
        "INCIDENT_ESCALATION_WEBHOOK": "${INCIDENT_WEBHOOK_URL}",
        "AUDIT_LOG_RETENTION": "2555"
      }
    },
    "web-search": {
      "type": "stdio",
      "command": "npx",
      "args": ["@mcp/server-web-search", "--enterprise-mode"],
      "tools": [
        "search-web", 
        "get-trends", 
        "fetch-updates",
        "search-azure-docs",
        "get-marketplace-insights",
        "fetch-security-advisories",
        "search-best-practices"
      ],
      "env": {
        "SEARCH_API_KEY": "${BING_SEARCH_API_KEY}",
        "ALLOWED_DOMAINS": "microsoft.com,azure.com,github.com,docs.microsoft.com,learn.microsoft.com",
        "SEARCH_FILTERS": "azure,marketplace,security,enterprise",
        "RESULT_LIMIT": "10"
      }
    },
    "file-system": {
      "type": "stdio",
      "command": "npx",
      "args": ["@mcp/server-filesystem", "--secure-mode"],
      "tools": [
        "read-file", 
        "write-file", 
        "list-directory", 
        "create-template",
        "automated-template-generation",
        "project-scaffolding",
        "configuration-management",
        "secure-file-operations",
        "backup-and-restore",
        "file-integrity-validation"
      ],
      "env": {
        "ALLOWED_PATHS": "/workspace,/tmp,/home/runner/work,/repos/azure-marketplace-generator",
        "MAX_FILE_SIZE": "10485760",
        "ALLOWED_EXTENSIONS": ".json,.yaml,.yml,.md,.ts,.js,.bicep,.arm",
        "ENCRYPTION_ENABLED": "true",
        "BACKUP_ENABLED": "true",
        "AUDIT_FILE_OPERATIONS": "true"
      }
    }
  }
}