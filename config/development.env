# Development Environment Configuration Profile
# Optimized for development and testing with cost savings

# Environment Configuration
ENVIRONMENT="dev"
REGION="ukwest"
SECURITY_LEVEL="standard"
COMPLIANCE_MODE=""

# Azure Marketplace Generator - Path Configuration
# ARM-TTK Configuration
AZMP_ARM_TTK_PATH=/path/to/arm-ttk/Test-AzTemplate.ps1
AZMP_ARM_TTK_CACHE_TTL=24

# Directory Paths
AZMP_PACKAGES_DIR=/workspace/packages
AZMP_TEMPLATES_DIR=/workspace/templates
AZMP_CACHE_DIR=/home/$USER/.azmp/cache
AZMP_TEMP_DIR=/tmp/azmp

# Azure Configuration
AZMP_DEFAULT_REGION=eastus
AZMP_AZURE_TIMEOUT=30000
AZMP_AZURE_RETRIES=3

# Monitoring Configuration
AZMP_MONITOR_INTERVAL=5
AZMP_MONITOR_CONCURRENCY=10
AZMP_HEALTH_CHECK_TIMEOUT=5000

# Packaging Configuration
AZMP_MAX_PACKAGE_SIZE=100
AZMP_QUALITY_THRESHOLD=70

# Deployment Options
ROLLBACK_ON_FAILURE=true
BACKUP_BEFORE_DEPLOY=false
METRICS_ENABLED=false
TIMEOUT_MINUTES=20

# Template Selection
TEMPLATE_TYPE="basic"

# Logging
LOG_LEVEL="debug"

# Resource Group Naming
RESOURCE_GROUP_NAME="rg-hoiltd-dev-storage-ukwest"

# Development specific settings
FORCE=true  # Skip confirmations for faster development cycles