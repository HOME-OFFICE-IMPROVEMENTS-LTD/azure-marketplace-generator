# CI/CD Pipeline Configuration Profile
# Optimized for automated deployments

# Environment Configuration
ENVIRONMENT="staging"
REGION="uksouth"
SECURITY_LEVEL="high"
COMPLIANCE_MODE="soc2"

# Deployment Options
CI_MODE=true
FORCE=true
ROLLBACK_ON_FAILURE=true
BACKUP_BEFORE_DEPLOY=true
METRICS_ENABLED=true
TIMEOUT_MINUTES=30
PARALLEL_DEPLOY=true

# Template Selection
TEMPLATE_TYPE="flexible"

# Output Configuration
JSON_OUTPUT=true
OUTPUT_FORMAT="json"
LOG_LEVEL="info"

# Resource Group Naming
RESOURCE_GROUP_NAME="rg-hoiltd-staging-storage-cicd"

# Automation specific
SKIP_VALIDATION=false  # Always validate in CI/CD
WHAT_IF=false  # Skip what-if for faster pipelines