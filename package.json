{
  "name": "@hoiltd/azure-marketplace-generator",
  "version": "1.0.0",
  "description": "Enterprise tool for generating Azure Marketplace managed application packages",
  "main": "dist/index.js",
  "bin": {
    "azmp": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "cp -r src/templates dist/",
    "dev": "ts-node src/cli/index.ts",
    "test": "jest",
    "test:ci": "jest --maxWorkers=1 --detectOpenHandles --forceExit",
    "test:arm-ttk": "jest --testPathPattern=workflow-validation --maxWorkers=1 --detectOpenHandles",
    "test:security": "./scripts/security-scan.sh",
    "test:all": "npm run test && npm run test:security",
    "security-scan": "./scripts/security-scan.sh",
    "pre-launch": "./scripts/pre-launch-checklist.sh",
    "lint": "eslint src/**/*.ts --max-warnings 150",
    "audit:fix": "npm audit fix",
    "precommit": "npm run lint && npm run test:security && npm run build",
    "arm-ttk": "pwsh -File ../../../tools/arm-ttk/arm-ttk/Test-AzTemplate.ps1",
    "streaming-demo": "ts-node streaming-demo.ts",
    "streaming-test": "ts-node -e \"import('./src/testing/streaming-performance-test').then(m => m.runStreamingPerformanceTests())\"",
    "benchmark": "ts-node -e \"import('./src/testing/validation-benchmark').then(m => m.runValidationBenchmarks())\""
  },
  "keywords": [
    "azure",
    "marketplace",
    "managed-applications",
    "arm-templates",
    "partner-center"
  ],
  "author": "Home & Office Improvements",
  "license": "MIT",
  "dependencies": {
    "@azure/identity": "^4.13.0",
    "@azure/keyvault-secrets": "^4.10.0",
    "abort-controller": "^3.0.0",
    "ajv": "^8.12.0",
    "archiver": "^7.0.1",
    "async": "^3.2.6",
    "axios": "^1.12.2",
    "chalk": "^4.1.2",
    "commander": "^14.0.1",
    "crypto": "^1.0.1",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.8",
    "inquirer": "^9.2.11",
    "node-stream-zip": "^1.15.0",
    "p-limit": "^7.1.1",
    "p-queue": "^9.0.0",
    "stream-json": "^1.9.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/archiver": "^6.0.2",
    "@types/async": "^3.2.25",
    "@types/fs-extra": "^11.0.2",
    "@types/inquirer": "^9.0.6",
    "@types/jest": "^29.5.5",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.15.0",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
