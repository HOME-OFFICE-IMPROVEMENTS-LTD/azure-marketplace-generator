{
  "name": "@hoiltd/azure-marketplace-generator",
  "version": "0.1.0",
  "description": "Enterprise tool for generating Azure Marketplace managed application packages",
  "main": "dist/index.js",
  "bin": {
    "azmp": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "cp -r src/templates dist/",
    "dev": "ts-node src/cli/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "arm-ttk": "pwsh -File ../../../tools/arm-ttk/arm-ttk/Test-AzTemplate.ps1"
  },
  "keywords": [
    "azure",
    "marketplace",
    "managed-applications",
    "arm-templates",
    "partner-center"
  ],
  "author": "Home & Office Improvements",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "archiver": "^7.0.1",
    "chalk": "^4.1.2",
    "commander": "^14.0.1",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.8",
    "inquirer": "^9.2.11"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/fs-extra": "^11.0.2",
    "@types/inquirer": "^9.0.6",
    "@types/jest": "^29.5.5",
    "@types/node": "^24.7.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
