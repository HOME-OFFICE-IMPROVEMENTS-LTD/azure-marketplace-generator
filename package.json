{
  "name": "@hoiltd/azure-marketplace-generator",
  "version": "2.1.0",
  "description": "CLI tool for generating Azure Storage marketplace managed applications",
  "main": "dist/index.js",
  "bin": {
    "azmp": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc && npm run copy-templates",
    "copy-templates": "cp -r src/templates dist/",
    "dev": "ts-node src/cli/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "install-arm-ttk": "./scripts/install-arm-ttk.sh",
    "setup": "npm install && npm run install-arm-ttk && npm run build"
  },
  "keywords": [
    "azure",
    "marketplace",
    "managed-applications",
    "arm-templates",
    "partner-center"
  ],
  "author": "Home & Office Improvements",
  "license": "MIT",
  "dependencies": {
    "archiver": "^7.0.1",
    "chalk": "^4.1.2",
    "commander": "^14.0.1",
    "fs-extra": "^11.1.1",
    "handlebars": "^4.7.8",
    "inquirer": "^9.2.11",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/archiver": "^6.0.2",
    "@types/fs-extra": "^11.0.2",
    "@types/inquirer": "^9.0.6",
    "@types/jest": "^29.5.5",
    "@types/node": "^24.7.2",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.15.0",
    "globals": "^16.4.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
