{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "metadata": {
        "_generator": {
            "name": "Azure Marketplace Generator - Direct Deploy",
            "version": "0.1.0"
        },
        "description": "Flexible Storage Platform - Direct Deployment for Testing"
    },
    "parameters": {
        "storageAccountNamePrefix": {
            "type": "string",
            "maxLength": 11,
            "metadata": {
                "description": "Prefix for the storage account name (max 11 characters)"
            }
        },
        "storageAccountType": {
            "type": "string",
            "defaultValue": "Standard_LRS",
            "allowedValues": [
                "Standard_LRS",
                "Standard_GRS",
                "Standard_RAGRS"
            ],
            "metadata": {
                "description": "Storage account type and replication option"
            }
        },
        "enableStaticWebsite": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Enable static website hosting for web applications"
            }
        },
        "enableTables": {
            "type": "bool", 
            "defaultValue": false,
            "metadata": {
                "description": "Enable Table storage for NoSQL database functionality"
            }
        },
        "enableQueues": {
            "type": "bool",
            "defaultValue": false, 
            "metadata": {
                "description": "Enable Queue storage for message processing"
            }
        },
        "enableFileShares": {
            "type": "bool",
            "defaultValue": false,
            "metadata": {
                "description": "Enable File storage for network drives"
            }
        }
    },
    "variables": {
        "storageAccountName": "[concat(parameters('storageAccountNamePrefix'), uniqueString(resourceGroup().id))]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2023-04-01",
            "name": "[variables('storageAccountName')]",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('storageAccountType')]"
            },
            "kind": "StorageV2",
            "properties": {
                "accessTier": "Hot",
                "allowBlobPublicAccess": "[parameters('enableStaticWebsite')]",
                "allowSharedKeyAccess": true,
                "encryption": {
                    "services": {
                        "blob": {
                            "keyType": "Account",
                            "enabled": true
                        },
                        "file": {
                            "keyType": "Account", 
                            "enabled": true
                        },
                        "table": {
                            "keyType": "Account",
                            "enabled": true
                        },
                        "queue": {
                            "keyType": "Account", 
                            "enabled": true
                        }
                    },
                    "keySource": "Microsoft.Storage"
                },
                "networkAcls": {
                    "bypass": "AzureServices",
                    "virtualNetworkRules": [],
                    "ipRules": [],
                    "defaultAction": "Allow"
                },
                "supportsHttpsTrafficOnly": true,
                "minimumTlsVersion": "TLS1_2"
            },
            "tags": {
                "CreatedBy": "Azure Marketplace Generator",
                "Publisher": "HomeOfficeImprovements",
                "Application": "flexible-storage-demo",
                "BusinessModel": "Flexible Platform"
            }
        }
    ],
    "outputs": {
        "storageAccountName": {
            "type": "string",
            "value": "[variables('storageAccountName')]",
            "metadata": {
                "description": "Name of the created storage account"
            }
        },
        "storageEndpoint": {
            "type": "string",
            "value": "[reference(variables('storageAccountName'), '2023-04-01').primaryEndpoints.blob]",
            "metadata": {
                "description": "Primary blob endpoint URL"
            }
        },
        "connectionString": {
            "type": "string", 
            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=', listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2023-04-01').keys[0].value, ';EndpointSuffix=core.windows.net')]",
            "metadata": {
                "description": "Connection string for the storage account"
            }
        },
        "staticWebsiteUrl": {
            "condition": "[parameters('enableStaticWebsite')]",
            "type": "string",
            "value": "[reference(variables('storageAccountName'), '2023-04-01').primaryEndpoints.web]",
            "metadata": {
                "description": "Static website primary endpoint URL (only when enabled)"
            }
        },
        "tableEndpoint": {
            "condition": "[parameters('enableTables')]",
            "type": "string",
            "value": "[reference(variables('storageAccountName'), '2023-04-01').primaryEndpoints.table]",
            "metadata": {
                "description": "Table storage endpoint URL (only when enabled)"
            }
        },
        "queueEndpoint": {
            "condition": "[parameters('enableQueues')]",
            "type": "string", 
            "value": "[reference(variables('storageAccountName'), '2023-04-01').primaryEndpoints.queue]",
            "metadata": {
                "description": "Queue storage endpoint URL (only when enabled)"
            }
        },
        "fileEndpoint": {
            "condition": "[parameters('enableFileShares')]",
            "type": "string",
            "value": "[reference(variables('storageAccountName'), '2023-04-01').primaryEndpoints.file]",
            "metadata": {
                "description": "File storage endpoint URL (only when enabled)"
            }
        },
        "enabledServices": {
            "type": "object",
            "value": {
                "staticWebsite": "[parameters('enableStaticWebsite')]",
                "tables": "[parameters('enableTables')]", 
                "queues": "[parameters('enableQueues')]",
                "fileShares": "[parameters('enableFileShares')]"
            },
            "metadata": {
                "description": "Summary of enabled storage services"
            }
        },
        "deploymentSummary": {
            "type": "object",
            "value": {
                "storageAccount": "[variables('storageAccountName')]",
                "services": {
                    "blob": "Always enabled",
                    "web": "[if(parameters('enableStaticWebsite'), 'Enabled', 'Disabled')]",
                    "table": "[if(parameters('enableTables'), 'Enabled', 'Disabled')]",
                    "queue": "[if(parameters('enableQueues'), 'Enabled', 'Disabled')]",
                    "file": "[if(parameters('enableFileShares'), 'Enabled', 'Disabled')]"
                },
                "businessModel": "Flexible Platform - Multiple Services Available"
            },
            "metadata": {
                "description": "Complete deployment summary showing the flexible platform capabilities"
            }
        }
    }
}